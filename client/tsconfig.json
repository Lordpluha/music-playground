{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@app/*": ["./src/app/*"],
			"@ui/*": ["./src/components/ui/*"],
			"@type/*": ["./src/components/types/*"],
			"@components/*": ["./src/components/*"],
			"@store/*": ["./src/components/store/*"],
			"@hooks/*": ["./src/components/hooks/*"],
			"@tools/*": ["./src/components/tools/*"],
			"@icons/*": ["./src/components/ui/icons/*"],
			"@context/*": ["./src/components/context/*"],
			"@stories/*": ["./src/components/stories/*"],
			"@services/*": ["./src/components/services/*"],
			"@interfaces/*": ["./src/components/interfaces/*"],
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
